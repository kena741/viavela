<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= hotel.name %> Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .category-section {
            margin-bottom: 3rem;
        }
        .menu-item {
            transition: all 0.3s ease;
        }
        .menu-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <!-- Hotel Header -->
        <div class="text-center mb-12">
            <% if (hotel.logo) { %>
                <img src="<%= hotel.logo %>" alt="<%= hotel.name %> Logo" class="h-24 mx-auto mb-4">
            <% } %>
            <h1 class="text-4xl font-bold text-gray-900"><%= hotel.name %></h1>
            <p class="text-gray-600 mt-2"><%= hotel.location %></p>
            <p class="text-gray-600"><%= hotel.contact %></p>
        </div>
        
        <!-- Menu by Categories -->
        <% categories.forEach(category => { %>
        <div class="category-section">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800 border-b-2 border-gray-200 pb-2">
                <%= category %>
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% menuItems.filter(item => item.category === category).forEach(item => { %>
                <div class="menu-item bg-white p-6 rounded-lg shadow-md">
                    <div class="flex items-start">
                        <% if (item.image) { %>
                        <div class="w-24 h-24 mr-4 flex-shrink-0 overflow-hidden rounded-lg">
                            <img src="<%= item.image %>" alt="<%= item.name %>" 
                                 class="w-full h-full object-cover">
                        </div>
                        <% } %>
                        <div>
                            <h3 class="font-bold text-xl text-gray-900"><%= item.name %></h3>
                            <% if (item.description) { %>
                            <p class="text-gray-600 mt-1 text-sm"><%= item.description %></p>
                            <% } %>
                            <p class="font-bold text-black mt-2 text-lg">
                                <%= item.price.toFixed(2) %> ETB
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        <% }); %>
        
        <!-- Footer -->
        <div class="mt-16 text-center text-gray-500 text-sm">
            <p>Powered by AddisMenu</p>
            <p class="mt-1">Scan QR code to view this menu anytime</p>
        </div>
    </div>
</body>
</html>